@model IEnumerable<Assessment6Mock.Model.Employee>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.FirstName)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Age)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Salary)
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <td>
                    @employee.FirstName
                </td>
                <td>
                    @employee.Age
                </td>
                <td>
                    @employee.Salary.ToString("c")
                </td>
            </tr>
            }
        </tbody>
    </table>

    @using (Html.BeginForm("RetirementInfo", "Home", FormMethod.Post))
    {
        <select id="selectRetiree" name="employeeId">
            @foreach (var employee in Model)
            {
                <option value="@employee.Id">@employee.FirstName</option>
            }
        </select>

        <input type="submit" value="Check Employee" />
    }

</div>
